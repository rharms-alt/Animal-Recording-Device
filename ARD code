<div id="add-modal" class="overlay" onclick="toggleModal('add-modal', false)">
    <div class="modal" onclick="event.stopPropagation()">
        <h2>Add Campus Specimen</h2>
        <input type="text" id="new-name" placeholder="Name (e.g. Garden Snail)">
        <input type="text" id="new-img" placeholder="Paste Photo Link">
        <button class="btn" onclick="confirmAdd()">Add to Map</button>
    </div>
</div>

<script>
    // CAMPUS DEFAULTS
    const defaultAnimals = [
        { id: 1, name: "Gray Squirrel", img: "https://images.unsplash.com/photo-1504208434309-cb69f4fe52b0?w=800" },
        { id: 2, name: "American Robin", img: "https://images.unsplash.com/photo-1620188461014-99765437818b?w=800" },
        { id: 3, name: "Honey Bee", img: "https://images.unsplash.com/photo-1559424751-6893693e5066?w=800" }
    ];

    let animals = JSON.parse(localStorage.getItem('campus_animals')) || defaultAnimals;
    let entries = JSON.parse(localStorage.getItem('campus_entries')) || {};
    let currentId = null;

    function renderGrid() {
        const grid = document.getElementById('main-grid');
        grid.innerHTML = '';
        animals.forEach(a => {
            grid.innerHTML += `<div class="card" onclick="viewAnimal(${a.id})"><div class="animal-img" style="background-image:url('${a.img}')"></div><div style="padding:15px;"><h3>${a.name}</h3></div></div>`;
        });
        grid.innerHTML += `<div class="card add-card" onclick="toggleModal('add-modal', true)">+</div>`;
    }

    function viewAnimal(id) {
        currentId = id;
        const animal = animals.find(a => a.id === id);
        document.getElementById('grid-view').style.display = 'none';
        document.getElementById('encyclopedia-view').style.display = 'block';
        document.getElementById('view-name').innerText = animal.name;
        document.getElementById('view-img').style.backgroundImage = `url('${animal.img}')`;
        const data = entries[id] || { sci: "Scientific Name: TBD", notes: [] };
        document.getElementById('scientific-input').value = data.sci === "Scientific Name: TBD" ? "" : data.sci;
        document.getElementById('view-sci-display').innerText = data.sci;
        renderNotes(data.notes);
    }

    function showGrid() {
        document.getElementById('grid-view').style.display = 'block';
        document.getElementById('encyclopedia-view').style.display = 'none';
    }

    function toggleModal(id, show) { document.getElementById(id).style.display = show ? 'flex' : 'none'; }

    function confirmAdd() {
        const name = document.getElementById('new-name').value;
        const img = document.getElementById('new-img').value || 'https://via.placeholder.com/500?text=Campus+Specimen';
        if(!name) return;
        animals.push({ id: Date.now(), name, img });
        localStorage.setItem('campus_animals', JSON.stringify(animals));
        toggleModal('add-modal', false);
        renderGrid();
    }

    function saveDetails() {
        const sci = document.getElementById('scientific-input').value || "Scientific Name: TBD";
        const note = document.getElementById('comment-input').value;
        if(!entries[currentId]) entries[currentId] = { sci: "", notes: [] };
        entries[currentId].sci = sci;
        if(note.trim()) entries[currentId].notes.push({ text: note, date: new Date().toLocaleDateString() });
        localStorage.setItem('campus_entries', JSON.stringify(entries));
        document.getElementById('comment-input').value = "";
        viewAnimal(currentId);
        alert("Observation Saved!");
    }

    function renderNotes(notes) {
        const list = document.getElementById('comment-list');
        list.innerHTML = "<h3>Sighting History</h3>";
        notes.slice().reverse().forEach(n => {
            list.innerHTML += `<div class="comment">${n.text}<br><small>Sighted on: ${n.date}</small></div>`;
        });
    }

    function deleteAnimal() {
        if(confirm("Remove this animal from the campus map?")) {
            animals = animals.filter(a => a.id !== currentId);
            localStorage.setItem('campus_animals', JSON.stringify(animals));
            showGrid();
            renderGrid();
        }
    }

    window.onload = renderGrid;
</script>
</body>
